<?xml version="1.0" encoding="ISO-8859-1"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
elementFormDefault="qualified">

<xsd:include schemaLocation="global.xsd"/>

<xsd:element name="GestureSpace" type="spaceType"/>

<xsd:complexType name="spaceType">
	<xsd:sequence>
		<xsd:element name="scale" type="scaleType" minOccurs="1" maxOccurs="unbounded"/>
	</xsd:sequence>
</xsd:complexType>

<xsd:complexType name="scaleType">
	<xsd:sequence>
	</xsd:sequence>
	<xsd:attribute name="id" type="xsd:string" use="required"/>
	<xsd:attribute name="value" type="xsd:float"/>	
</xsd:complexType>
	
</xsd:schema>
