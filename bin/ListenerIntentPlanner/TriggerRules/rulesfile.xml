<rules>

	<rule name="trigger-head_nod">

		<usersignals>
			<usersignal id="1" name="nod" modality="head"/>
		</usersignals>

		<backchannels probability="0.8" priority="2">
			<mimicry probability="0.6">
				<mimicry_signal name="head=Nod_Middle" modality="head"/>
			</mimicry>

			<response_reactive probability="0.4"/>
		</backchannels>
	</rule>



