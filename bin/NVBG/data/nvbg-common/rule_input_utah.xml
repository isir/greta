<?xml version="1.0" encoding="utf-8" ?> 

<rule_input>
<project>GUNSLINGER</project>
<nvb_rules>

	<!-- rule_input_utah.xml -->
	<!-- This file lays out the communicative derivation from the surface text --> 
	<!-- Gunslinger scenario, Utah character -->

	<!-- *********************************** NON-ANIMATIONS ********************************** -->
	<rule keyword="first_NP" priority="5" >
		<pattern>first_NP</pattern>
	</rule>

	<rule keyword="noun_phrase" priority="5" >
		<pattern>NP</pattern>
	</rule>

	<rule keyword="interjection" priority="1" >
		<pattern>INTJ</pattern>
	</rule>
	
	<rule keyword="compound_sentence" priority="1" >
		<pattern>CC</pattern>
	</rule>

	<!-- affirmation -->
	<rule keyword="affirmation" priority="2" >
		<pattern>yes</pattern>
		<pattern>yeah</pattern>
		<pattern>yes,</pattern>
	</rule>
	
	<!-- inclusivity -->
	<rule keyword="inclusivity" priority="4" >
		<pattern>everything</pattern>
		<pattern>all</pattern>
		<pattern>whole</pattern>
		<pattern>plenty</pattern>
		<pattern>full</pattern>
		<pattern>completely</pattern>
	</rule>
	
	<!-- intensification -->
	<rule keyword="intensification" priority="4" >
		<pattern>really</pattern>
		<pattern>very</pattern>
		<pattern>quite</pattern>		
		<pattern>wonderful</pattern>
		<pattern>great</pattern>
		<pattern>absolutely</pattern>
		<pattern>huge</pattern>
		<pattern>fantastic</pattern>
		<pattern>so</pattern>
		<pattern>amazing</pattern>
		<pattern>important</pattern>
	</rule>
	
	<!-- emo_positive -->
	<rule keyword="emo_positive" priority="1" >
		<pattern>good</pattern>
		<pattern>nice</pattern>
		<pattern>great</pattern>
	</rule>

	<!-- rio -->
	<rule keyword="rio" priority="1" >
		<pattern>rio</pattern>
	</rule>

	<!-- *********************************** ANIMATIONS ********************************** -->
	
	<!--   greeting animation  -->
	<rule keyword="greeting_animation" priority="1" >
		<pattern>hello</pattern>
		<pattern>hi</pattern>
		<pattern>bye</pattern>		
		<pattern>howdy</pattern>
		<pattern>hey</pattern>
		<animation>
			<posture name="ChrUtah_Idle001">				
				<clip>ChrUtah_Bye001</clip>
			</posture>	
		</animation>
	</rule>

	<!--   you animation  -->
	<rule keyword="you_animation" priority="5" >
		<pattern>you</pattern>
		<pattern>your</pattern>
		<pattern>yours</pattern>
		<animation>
		    <posture name="ChrUtah_Idle001">				
				<clip>ChrUtah_Offer001</clip>
				<clip>ChrUtah_AccentHandLeft001</clip>
				<clip>ChrUtah_AccentHandRight001</clip>
				<clip>ChrUtah_IndicateIndividual002</clip>
			</posture>		
		</animation>
	</rule>
		
	<!--   me animation  -->
	<rule keyword="me_animation" priority="5" >
		<pattern>i</pattern> 
		<pattern>me</pattern>
		<pattern>my</pattern>
		<pattern>mine</pattern>		
		<animation>
			<posture name="ChrUtah_Idle001">
				<clip>ChrUtah_IndicateSelf001</clip>
				<clip>ChrUtah_Me001</clip>
			</posture>
		</animation>
	</rule>
		
	<!--   negation animation  -->
	<rule keyword="negation_animation" priority="2" >
		<pattern>no</pattern>
		<pattern>not</pattern>
		<pattern>nothing</pattern>
		<pattern>cannot</pattern>
		<pattern>can't</pattern>
		<pattern>cant</pattern>
		<pattern>don't</pattern>
		<pattern>dont</pattern>
		<pattern>didn't</pattern>
		<pattern>couldn't</pattern>
		<pattern>couldnt</pattern>
		<pattern>isn't</pattern>
		<pattern>isnt</pattern>
		<pattern>wasn't</pattern>
		<pattern>wasnt</pattern>
		<animation>
			<posture name="ChrUtah_Idle001">
				<clip>ChrUtah_NegationHand001</clip>	
				<clip>ChrUtah_Reject001</clip>	
			</posture>		
		</animation>
	</rule>
	
	<!--   contrast animation  -->
	<rule keyword="contrast_animation" priority="4" >
		<pattern>but</pattern>
		<pattern>however</pattern>
		<animation>				
		    <posture name="ChrUtah_Idle001">
				<clip>ChrUtah_AccentPalmChop</clip>
				<clip>ChrUtah_AccentRight002</clip>
			</posture>		
		</animation>
	</rule>	
	
	<!--   assumption animation  -->
	<rule keyword="assumption_animation" priority="3">
		<pattern>maybe</pattern>
		<pattern>perhaps</pattern>
		<animation>			
			<posture name="ChrUtah_Idle001">
				<clip>ChrUtah_IndicateGroup001</clip>
				<clip>ChrUtah_Offer001</clip>
			</posture>		
			</animation>
	</rule>
	
	<!--   rhetorical animation  -->
	<rule keyword="rhetorical_animation" priority="2" >
		<pattern>why</pattern>
		<animation>
			<posture name="ChrUtah_Idle001">
				<clip>ChrUtah_IndicateGroup001</clip>
			</posture>		
		</animation>
	</rule>

	<!--   question animation  -->
	<rule keyword="question_animation" priority="1">
		<pattern>where</pattern>
		<pattern>who</pattern>
		<pattern>how</pattern>
		<pattern>when</pattern>
		<pattern>do</pattern>
		<animation>
			<posture name="ChrUtah_Idle001">
				<clip>ChrUtah_IndicateGroup001</clip>
			</posture>		
		</animation>
	</rule>
	
	<!--   first_VP animation  -->
	<rule keyword="first_VP" priority="5" >		
		<pattern>first_VP</pattern>		
		<animation>
			<posture name="ChrUtah_Idle001">
				<clip>ChrUtah_AccentHandRight001</clip>
				<!--<clip>ChrUtah_IndicateGroup001</clip>-->
				<clip>ChrUtah_Offer001</clip>
				<clip>ChrUtah_IndicateResignation001</clip>
			</posture>	
		</animation>
	</rule>

	<!--   obligation animation  -->
	<rule keyword="obligation_animation" priority="5" >
		<pattern>must</pattern>		
		<animation>
			<posture name="ChrUtah_Idle001">
				<clip>ChrUtah_AccentPalmChop</clip>
				<clip>ChrUtah_Emphasis001</clip>
			</posture>		
		</animation>
	</rule>

	<!-- TEMPORARY FOR GUNSLINGER DEMO -->
	<!--   horizontal animation  -->
	<rule keyword="horizontal_animation" priority="1" >
		<pattern>horizontal</pattern>		
		<animation>
			<posture name="ChrUtah_Idle001">
				<clip>ChrUtah_IndicateHorizontal001</clip>
			</posture>		
		</animation>
	</rule>
	
	
	
	<!-- add new rule here -->

</nvb_rules>
</rule_input>